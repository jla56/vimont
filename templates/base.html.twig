                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href={{ path('contact') }}>Contact</a>
                    </li>
                </ul>
            </div>
        </nav>
        <div class="container">
            {% block body %}{% endblock %}
        </div>

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
